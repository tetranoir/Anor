{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": ".tmp",
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src"
  ],
  "files": [
    "./v3.ts"
  ]
}
